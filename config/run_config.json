[
    {
        "image": "docker.elastic.co/elasticsearch/elasticsearch:7.4.2", 
        "name": "myelkstack-es",
        "detach": true,
        "environment": {
            "MAX_MAP_COUNT": 262144,
            "discovery.type": "single-node",
            "http.cors.enabled": "true",
            "http.cors.allow-origin": "*"
        },
        "network": "myelkstack-network",
        "ports": {
            "9200/tcp": 8382,
            "9300/tcp": 8383
        }
    },
    {
        "image": "docker.elastic.co/kibana/kibana:7.4.2", 
        "name": "myelkstack-kibana",
        "detach": true,
        "network": "myelkstack-network",
        "ports": {
            "5601/tcp": 8384
        },
        "environment": {
            "ELASTICSEARCH_HOSTS": "http://mymonitor-es:9200"
        }
    },
    {
        "image": "docker.elastic.co/logstash/logstash:7.4.2",
        "name": "myelkstack-logstash",
        "detach": true,
        "network": "myelkstack-network",
        "ports": {
            "5601/tcp": 8385
        },
        "volumes": {
            "mymonitor/logstash/pipeline/logstash.conf": {
                "bind": "/usr/share/logstash/pipeline/logstash.conf",
                "mode": "ro"
            },
            "mymonitor/logstash/config/logstash.yml": {
                "bind": "/usr/share/logstash/config/logstash.yml",
                "mode": "ro"
            }
        }
    },

